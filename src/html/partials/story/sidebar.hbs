<aside class='sidebar'>

  <div class='sidebar__content'>
    <div class='sidebar__drawer'>
      <button class='drawer__toggle' role='switch' aria-checked='false'>
        <img inline src='chevrons-right.svg'>
        <img inline src='x.svg'>
      </button>
    </div>
    <div class='sidebar__pudding'>
      <a class='homeLink' href='https://pudding.cool'>
        <img inline src='pudding/wordmark.svg'>
      </a>
    </div>

    <div class='sidebar__sections'>
      <h2 class='sidebar-title'>{{doc.sectionTitle}}</h2>
      {{#each doc.sections}}
        <a class='section-link section-link-{{link}}' href='#{{link}}'>
          <div class='sidebar__section'>
            <h3 class='sidebar__section-title'>{{title}}</h3>
            <p class='sidebar__section-prose'>{{desc}}</p>
          </div>
        </a>
      {{/each}}
    </div>

    <div class='sidebar__nonPeople'>
      <h2 class='sidebar-title'>{{doc.nonPeopleTitle}}</h2>
      <div class='sidebar__nonPeople-button'>
        <p class='question-prose'>{{doc.buttonQuery}}</p>
        <button class='filter' role="switch" aria-checked="false" aria-labelledby="sidebar-prose">
            <span class='button-label'>No</span>
            <span class='button-label'>Yes</span>
        </button>
      </div>

      {{#each doc.nonPeopleText}}
        <p class='sidebar-prose question-context'>{{{value}}}</p>
      {{/each}}


    </div>

  </div>
</aside>
