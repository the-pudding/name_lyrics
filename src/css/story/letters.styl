#letters
  .section__figure
    display flex
    flex-wrap wrap
    min-width 800px
  .chart
    margin 0.75rem 0.5rem
    max-width 350px

    &__container
      .letter-details
        display flex
        align-items: baseline;
        .left-container, .right-container
          min-width 150px
        .left-container
          display flex
          justify-content: flex-end;
        .left-bar, .right-bar
          height 10px
          background-color: $primary
          border-radius 3px
        .letter
          margin 0 1rem
