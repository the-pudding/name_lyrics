#popular
  .section__figure-group
    display flex
  .section__figure-popularSpark
    min-width 250px
    .g-bar
      display flex
      flex-direction row
      align-items: baseline;
      .spark-bar
        height 10px
        background-color: $primary
        margin 0 0.5rem
        border-radius 3px
      p
        margin 0
      .spark-name
        width 60px
        set-type-size('root')
        font-weight bold
        text-align: right
        font-family $sans-display
      .spark-count
        set-type-size('small')
        font-family $sans-display

  .section__figure-popular
    .playlist-item
      padding 0 1rem 1rem 1rem
      margin 0.5rem 0
      border-bottom 1px solid rgba($white, 0.2)
      &:last-child
        border-bottom none
      .pop-lyrics
        font-family $sans-display
        font-weight 700
        margin 0.5rem 0
      .pop-meta
        display flex
        flex-direction row
        justify-content: space-between;
        p
          font-family $sans-display
          text-transform uppercase
          set-type-size('small')
          margin 0
