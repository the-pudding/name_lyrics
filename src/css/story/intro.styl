.intro
	margin 0 auto
	padding 3rem 0 0 0

	&__top
		display flex
		margin-bottom 3rem
		flex-direction column
		+mq('bp-4')
			flex-direction row

		.homeLink
			border-bottom none

		.intro__album
			width 120px
			height 120px
			background-color: $primary
			padding 1rem
			display flex
			align-items: center;
			justify-content: center
			margin 1rem auto
			&-cover
				width 70px
				fill $bg
			+mq('bp-4')
				width 180px
				height 180px
				margin 0 2rem 0 0
				&-cover
					width 100px
					fill $bg

	&__hed
		max-width 60rem
		margin 0
		font-family $sans-display
		line-height 1
		set-type-size('xxxx-large')
		+mq('bp-4')
			set-type-size('xxxxx-large')

	&__dek
		max-width 25rem
		margin 0
		margin-top 1rem
		font-family $sans-display
		color rgba($white, 0.5)
		line-height 1.2

	&__sub
		margin 0
		set-type-size('small')
		font-family $sans-display
		text-transform uppercase

	.byGroup
		display flex
		align-items: baseline;
		color rgba($white, 0.5)
		span
			margin 0 0.5rem
		svg
			display block
			margin auto
			stroke $primary


	&__byline
		max-width $column-width
		margin 1rem 0 0 0
		text-align center
		set-type-size('small')

	&__time
		display block
		max-width $column-width
		margin-top 1rem
		text-align center
		set-type-size('small')

	.disclaimer-title
		set-type-size('small')
		font-weight bold
		background-color: $primary
		padding 0.5rem 1rem
		display inline-block
		margin-top 2rem
		line-height 1
		svg
			width 15px
			height 15px
			transform translateY(2px)
			stroke $white
			stroke-width 2px
	.disclaimer-body
		set-type-size('small')
		background-color $bg-light
		padding 0.5rem 1rem
		margin-top 0
