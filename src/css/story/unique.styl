#unique
  .section__figure
    display flex
    align-items: flex-end;
    height 575px
  .chart
    min-width 100px
    margin 0.75rem 0.5rem

    .uniqueName
      margin 0
      set-type-size('small')
      line-height 1.1

    .text-container
      height 100px
      margin-top 0.5rem
      border-top 1px solid $primary

      .unique-title
        set-type-size('root')
        font-family $sans-display
        font-weight bold
        margin-top 0.25rem

      .unique-artist
        set-type-size('small')
        font-family $sans-display
        text-transform: uppercase
        margin 0
