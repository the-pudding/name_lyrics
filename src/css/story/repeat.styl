#repeat
  .section__figure
    display flex
    flex-direction column
    &-chart
      display flex
      flex-wrap wrap
      justify-content: space-between;
      padding 0 1rem
  .chart__sub, .chart__title
    padding 0 1rem
  .chart__search
    order 12
    .repeat-artist
      display none
      &.is-visible
        display block
  .chart, .chart__search
    width 150px
    height 230px
    margin 0.75rem 0


    &__container
      height 150px
      border 1px solid $white
      border-radius 5px
      padding 5px
      background-color: $bg-light
      display flex
      flex-direction column
      justify-content: space-between;
      margin 0.25rem 0

      .name-details
        display flex
        font-family $sans-display
        align-items: baseline;
        justify-content: space-between;
        .name
          set-type-size('root')
          font-weight bold
          margin 0
        .count
          set-type-size('small')
          margin 0
      .block-container
        display flex
        flex-direction: row;
        flex-wrap wrap-reverse
        align-self flex-end

        .repeat-block
          width 7px
          height 7px
          background-color $primary
          margin 1px
          border-radius 2px

    .meta__container
      display flex
      justify-content: space-between;
      margin-top 0.5rem

      .repeat-title
        font-family $sans-display
        set-type-size('root')
        font-weight bold
        margin 0

      .repeat-artist
        font-family $sans-display
        set-type-size('small')
        text-transform uppercase
        margin 0

      .playlist-button
        margin 0 0 0 0.25rem
      .ui__search
        input
          outline none;
          border none;
          background-color $primary
          set-type-size('root')
          font-family $sans-display
          font-weight bold
          color $bg !important
          width 150px
          margin-top 0.25rem
          &::placeholder
            color $bg-light
