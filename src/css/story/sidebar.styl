.sidebar
  width $sidebar-width
  background-color $bg-light
  flex 0 0 auto
  transform translateX(-100%)
  transition transform 400ms ease-in-out
  z-index 50
  position fixed
  height 100vh
  +mq('bp-6')
    transform translateX(0)
    position relative
    height auto
  &.is-visible
    transform translateX(0)
    transition transform 400ms ease-in-out
  &__drawer
    cursor pointer
    pointer-events: all
    position absolute
    background $bg-light
    height 2.5rem
    width 2.5rem
    margin 0
    left 260px
    top 1rem
    border-radius 0 0.5rem 0.5rem 0
    transform translateX(100%)
    transition transform 400ms ease-in-out
    display flex
    align-items: center;
    justify-content: center;
    +mq('bp-6')
      display none
      pointer-events: none
    .drawer__toggle
      position relative
      svg
        background-color: $bg-light
        stroke $white
        fill none
        &:first-of-type
          display block
        &:last-of-type
          display none
      &.is-visible
        svg
          &:first-of-type
            display none
          &:last-of-type
            display block
  &__content
    position sticky
    left 0
    top 0
    width $sidebar-width
    padding 1rem
    height 100%
    +mq('bp-6')
      height auto

    svg
      max-width 150px
      fill $white
      padding-left 0.5rem
    .homeLink
      border-bottom none

  &-title
    set-type-size('large')
    text-transform uppercase
    font-weight: 200;
    font-family $sans-display
    padding-left 0.5rem
    margin-top 0.5rem

  &-prose
    font-family $sans-display
    set-type-size('small')
    margin 1rem 0
  &__sections
    height 355px
    display block
    &:hover > a:not(:hover)
      opacity 0.5

  .section-link
    display block
    border-bottom 1px solid rgba($white, 0.2)
    padding 2px 0.25rem 0.25rem 0.5rem
    height 35px
    overflow hidden
    background-color transparent
    transition 100ms linear
    cursor: pointer;
    border-left 2px solid $bg-light
    &:hover
      height 85px
      background-color rgba($white, 0.1)
      transition 100ms linear
    &.is-active
      border-left 2px solid $primary

    .sidebar__section-title
      margin-top 0.2rem
      set-type-size('root')
      font-weight bold
    .sidebar__section-prose
      font-family $sans-display
      set-type-size('small')
      margin 0.25rem 0
  .question-prose
    set-type-size('root')
    margin 0.5rem 0.75rem 0.5rem 0.5rem
  .question-context
    color rgba($white, 0.5)
    margin 0.5rem

  &__nonPeople-button
    display flex
    align-items: center
    button
      padding 0.5rem
      font-family $sans-display
      border-radius 5px
      border 1px solid $white
      background-color $bg-light
      width 160px
      height 45px

    span
      padding 0 0.5rem
      border-radius 2px
      pointer-events: none
    [role="switch"][aria-checked="true"] :first-child,
    [role="switch"][aria-checked="false"] :last-child
    	background $bg-light
    	color $fg

    [role="switch"][aria-checked="false"] :first-child,
    [role="switch"][aria-checked="true"] :last-child
    	background $fg
    	color $bg
