.sidebar
  width $sidebar-width
  background-color $bg-light
  flex 0 0 auto
  transform translateX(-100%)
  transition transform 400ms ease-in-out
  z-index 50
  position fixed
  +mq('bp-6')
    transform translateX(0)
    position relative
  &.is-visible
    transform translateX(0)
    transition transform 400ms ease-in-out
  &__drawer
    cursor pointer
    pointer-events: all
    position relative
    background $bg-light
    height 2.5rem
    width 2.5rem
    margin 0
    left 240px
    top 1rem
    border-radius 0 0.5rem 0.5rem 0
    transform translateX(100%)
    transition transform 400ms ease-in-out
    display flex
    align-items: center;
    justify-content: center;
    +mq('bp-6')
      display none
      pointer-events: none
    .drawer__toggle
      position relative
      svg
        background-color: $bg-light
        stroke $white
        fill none
        &:first-of-type
          display block
        &:last-of-type
          display none
      &.is-visible
        svg
          &:first-of-type
            display none
          &:last-of-type
            display block
  &__content
    position sticky
    left 0
    top 0
    width $sidebar-width
    padding 1rem

    svg
      max-width 150px
      fill $white

  &-title
    set-type-size('x-large')
    text-transform uppercase
    font-weight: 200;
    font-family $sans-display
    padding-left 0.5rem

  &-prose
    font-family $sans-display
    set-type-size('small')
    margin 1rem 0

  &__section
    border-bottom 1px solid rgba($white, 0.2)
    padding 0.5rem
    height 45px
    overflow hidden
    background-color transparent
    transition 100ms linear
    cursor: pointer;
    &:hover
      height 100px
      background-color rgba($white, 0.1)
      transition 100ms linear
    &-title
      margin-top 0.25rem
      set-type-size('root')
      font-weight bold
    &-prose
      font-family $sans-display
      set-type-size('small')
      margin 0.25rem 0

  &__nonPeople-button
    display flex
    align-items: center
    button
      padding 0.5rem
      font-family $sans-display
      border-radius 5px
      border 1px solid $white
      background-color $bg-light
      width 160px
      height 45px

    span
      padding 0 0.5rem
      border-radius 2px
      pointer-events: none
    [role="switch"][aria-checked="true"] :first-child,
    [role="switch"][aria-checked="false"] :last-child
    	background $bg-light
    	color $fg

    [role="switch"][aria-checked="false"] :first-child,
    [role="switch"][aria-checked="true"] :last-child
    	background $fg
    	color $bg
